<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KeepSafe"
    android:background="@drawable/fondo"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="241dp"
            android:background="@drawable/sos"
            android:orientation="vertical">

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="377dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/header"
                    android:gravity="center"
                    android:text="Keep Safe"
                    android:textSize="45sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/btnContacto"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/fondo_boton"
            android:drawableTop="@drawable/ic_persona2"
            android:paddingTop="10dp"
            android:text="CONTACTO"
            android:textColor="#090A0B"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnMapa"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/fondo_boton"
            android:drawableTop="@drawable/ic_localpolice2"
            android:paddingTop="10dp"
            android:text="COMISARIA"
            android:textColor="#141617"
            android:textSize="11sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnChat"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/fondo_boton"
            android:drawableTop="@drawable/ic_chat"
            android:paddingTop="10dp"
            android:text="MENSAJES"
            android:textColor="#090A0B"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnUbicacion"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/fondo_boton"
            android:drawableTop="@drawable/ic_llamar"
            android:paddingTop="10dp"
            android:text="LLAMAR"
            android:textColor="#090A0B"
            android:textSize="12sp"
            android:textStyle="bold"/>


    </LinearLayout>
</LinearLayout>